# Use archlinux:latest as parent image
FROM archlinux:latest

# Set maintainer
LABEL maintainer='BGameiro <projects+docker@bgameiro.me>'

# Update mirrors and packages. Install packages.
RUN pacman --noconfirm -Syyu \
                              # Jupyter
                              jupyterlab \
                              python-ipykernel \
                              python-ipywidgets \
                              # PyData
                              python-scipy \
                              python-pandas \
                              python-numpy \
                              python-matplotlib \
                              python-scikit-learn \
                              python-pytorch \
                              python-dask \
                              python-xarray \
                              python-distributed \
                              # Python Physics
                              python-mplhep \
                              python-uncertainties \
                              # Python helpers
                              python-pyarrow \
                              python-tqdm \
                              python-pip \
                              # ROOT
                              root \
                              python-uproot
                              
RUN pip install --user \
                              jupyterlab-visualpython \
                              dexplot \
                              metakernel \
                              modin[all] \
                              radioactivedecay
                              #auto-sklearn

# Expose port and path
EXPOSE 8888
VOLUME /appdata

# Build the lab
#RUN jupyter lab --generate-config=/appdata

# Run JupyterLab
CMD jupyter lab --ip=* --port=8888 --no-browser --notebook-dir=/opt/app/data --allow-root --config=/appdata
